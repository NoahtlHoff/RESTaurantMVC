@model RESTaurantMVC.Models.TableVM
@{
    ViewData["Title"] = "Redigera bord";
}

<h1 class="mb-4">Redigera bord</h1>

<form asp-action="EditTable" asp-route-id="@Model.Id" method="post" class="card shadow-sm p-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Number" class="form-label"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Capacity" class="form-label"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Spara</button>
        <a asp-action="Tables" class="btn btn-secondary">Avbryt</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}