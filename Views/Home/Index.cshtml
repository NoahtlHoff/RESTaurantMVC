@{
    ViewData["Title"] = "Home Page";
}

@{
    Layout = "_Layout";
}

<section class="py-5 bg-light border-bottom">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold mb-3">Välkommen till RESTaurant</h1>
                <p class="lead mb-4">A place where you could rest, or rant!</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a class="btn btn-dark btn-lg" asp-controller="Home" asp-action="Booking">Boka bord</a>
                    <a class="btn btn-outline-dark btn-lg" asp-controller="Home" asp-action="Menu">Se menyn</a>
                </div>
                <p class="text-muted mt-3 mb-0 small">Vegetariska alternativ • Takeaway • Säsongsbaserat</p>
            </div>
            <div class="col-lg-5">
                <div class="ratio ratio-4x3 rounded-4 overflow-hidden shadow-sm">
                    <img src="~/img/RESTaurant.png" alt="Interiör och rätter på RESTaurant" class="w-100 h-100" style="object-fit:cover" />
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="d-flex align-items-end justify-content-between mb-4">
            <h2 class="h3 fw-bold mb-0">Populära rätter</h2>
            <a class="link-dark" asp-controller="Home" asp-action="Menu">Visa alla</a>
        </div>

        @if (Model is null || Model.Count == 0)
        {
            <div class="alert alert-info">Inga rätter kunde laddas just nu.</div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var dish in Model)
                {
                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0 rounded-4">
                            <div class="ratio ratio-4x3 rounded-top-4 overflow-hidden">
                                <img src="@(string.IsNullOrWhiteSpace(dish.ImageUrl) ? Url.Content("~/img/placeholder.jpg") : dish.ImageUrl)"
                                     alt="@dish.Name" class="w-100 h-100" style="object-fit:cover" loading="lazy" />
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-start justify-content-between gap-3">
                                    <h3 class="h5 card-title mb-1">@dish.Name</h3>
                                    <span class="badge text-bg-light border">@dish.Price.ToString("0.##") kr</span>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(dish.Description))
                                {
                                    <p class="card-text text-muted mt-2">@dish.Description</p>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

